<div class="container">    
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">          
    <div class="panel panel-info" >
      <div class="panel-heading">
        <div class="panel-title">登录</div>
        <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">忘记密码?</a></div>
      </div> 
      <div style="padding-top:30px" class="panel-body" >
        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "用户名或邮箱" %>                                        
          </div>
          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "密码" %>
          </div>        
          <div class="input-group">
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %> 记住我
              </label>
            </div>
          </div>
          <div style="margin-top:10px" class="form-group">
            <div class="col-sm-12 controls">
              <%= f.submit "登录" , class: 'btn  btn-success borderless'%>
              <input type="submit" name="commit" value="Facebook登录" class="btn btn-primary borderless" />
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-12 control">
              <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                  还没有账号！
              <a href="/users/sign_up">在此注册</a>
              </div>
            </div>
          </div>    
        <% end %> 
      </div>                     
    </div>  
  </div>
</div>